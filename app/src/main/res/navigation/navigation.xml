<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_news">

    <fragment
        android:id="@+id/nav_news"
        android:name="ru.kozirfm.f1news.ui.fragments.NewsFragment"
        android:label="NewsFragment"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_nav_news_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_championship"
        android:name="ru.kozirfm.f1news.ui.fragments.ChampionshipFragment"
        android:label="ChampionshipFragment"
        tools:layout="@layout/fragment_championship"
        />

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="ru.kozirfm.f1news.ui.fragments.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment"
            app:popUpTo="@id/nav_news" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.kozirfm.f1news.ui.fragments.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
    <fragment
        android:id="@+id/nav_calendar"
        android:name="ru.kozirfm.f1news.ui.fragments.ChampCalendarFragment"
        android:label="ChampCalendarFragment" />

</navigation>